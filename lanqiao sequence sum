package lanqiao;

import java.util.Scanner;

public class Main {

	
	
	public static void main(String[] args) {
		
		long result=0;
		long n;
		
		Scanner in = new Scanner(System.in);
		n = in.nextLong();
//		for(long i=1;i<=n;i++) {
//			
//			result +=i;
//		}
		result = (1+n)*n/2;
		
		System.out.println(result);
	}
}



